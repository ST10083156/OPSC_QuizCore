<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreDisplayActivity"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/scoreDisplayTV"
        android:text="Score"
        android:textAlignment="center"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:textSize="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
    android:id="@+id/scoreTV"
    android:text="0"
    android:layout_marginTop="45dp"
    android:textAlignment="center"
    android:textStyle="bold"
    android:textSize="80dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/resultResponseTV"
        android:text="Encouragement"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:textSize="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/dashboardBtn"
        android:text="Return to Dashboard"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/quizzesBtn"
        android:text="Do another Quiz"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>
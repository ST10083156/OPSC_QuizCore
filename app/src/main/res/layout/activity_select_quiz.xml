<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectQuizActivity">

    <TextView
        android:id="@+id/selectQuizTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a Quiz"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/categorySelectTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiz Categories"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp" />

    <Spinner
        android:id="@+id/categorySelectSpinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp" />

    <ListView
        android:id="@+id/quizListView"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:elevation="25dp" />

    <Button
        android:id="@+id/backBtn"
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</LinearLayout>
